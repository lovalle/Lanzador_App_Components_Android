<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:text="Enrolar"
        android:textColor="#FFFFFF"
        android:background="@drawable/radius"
        app:layout_constraintBottom_toTopOf="@+id/btn_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_verification"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/radius"
        android:text="Verificar"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/numberId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo" />

    <EditText
        android:id="@+id/numberId"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:layout_marginBottom="36dp"
        android:hint="Número de identificación"
        android:inputType="number"
        android:maxLength="10"
        android:textAllCaps="false"
        android:textColor="#707070"
        android:textColorHint="#707070"
        android:textIsSelectable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_enroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>